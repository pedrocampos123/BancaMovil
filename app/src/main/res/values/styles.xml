    <style name="ShapeAppearanceOverlay.App.Image" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="ShapeableImageViewStyle" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.Image</item>
